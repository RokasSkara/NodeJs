<header>
    <div>
        <h1>Homepage</h1>
    </div>
    <div>
        {{#if Auth}}
        <h4>Welcome <span>{{user}}</span></h4>
        <ul>
            <a href="/user">My Blogs</a>
            <a href="/userManagement/logout" onclick="return confirm('Are you sure?')">Logout</a>
        </ul>
        {{/if}}
        {{#unless Auth}}
        <a href="/userManagement">Login</a>
        {{/unless}}
    </div>
</header>

<main>
    <section >
        <form action="/" id="filters">
            <div>
                <label for="sortBy">Sort By</label>
                <select name="sortBy">
                    <option value="id">-----</option>
                    <option value="title">Title</option>
                    <option value="content">Content</option>
                </select>
            </div>
            <div>
                <label for="order">Sort Order</label>
                <select name="order">
                    <option value="ASC">Asc</option>
                    <option value="DESC">Desc</option>
                </select>
            </div>
            <button class="SortButton">Sort</button>
        </form>
    </section>
    {{#if empty}}
    <h1>{{empty}}</h1>
    {{/if}}
    {{#each data}}
    <div class="Blog">
        <h4>{{this.title}}</h4>
        <p>{{this.content}}</p>
    </div>
    {{/each}}
</main>

<footer style="text-align: center;">
    <p> &copy; Copyright 2022 </p>
</footer>