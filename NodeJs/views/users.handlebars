<header>
    <div>
        <h1>My Blogs</h1>
        <button id="BlogAddToggler">Add Blog</button>
    </div>
    <div>
        <h4>Blogs by: <span>{{user}}</span></h4>
        <ul>
            <a href="/">Home</a>
            <a href="/userManagement/logout" onclick="return confirm('Are you sure?')">Logout</a>
        </ul>
    </div>
</header>
<section id="BlogAdd" class="hidden">
    <form action="/user" method="POST">
        <label for="title">Blog title</label>
        <input type="text" name="title" required>
        <label for="content">Blog Content</label>
        <textarea name="content" required> </textarea>
        <button>Submit</button>
    </form>
</section>

<main>
    {{#if empty}}
    <h1>{{empty}}</h1>
    {{/if}}
    {{#each data}}
    <div class="Blog">
        <div class="InnerBlog">
            <h4>{{this.title}}</h4>
            <p>{{this.content}}</p>
        </div>
        <div class="InnerBlogDelete">
            <form action="user/delete">
                <button name="blogID" value="{{this.id}}" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
        </div>
    </div>
    {{/each}}
</main>

